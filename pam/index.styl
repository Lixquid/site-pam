// Includes ////////////////////////////////////////////////////////////////////

// Fonts //

@import url( "https://fonts.googleapis.com/css?family=Open+Sans" + \
	":300,400" );

// Icons //

@import url( "https://cdnjs.cloudflare.com/ajax/libs/weather-icons/" + \
	"2.0.5/css/weather-icons.min.css" );

// Background //////////////////////////////////////////////////////////////////

html
	padding 0
	margin 0

	background #333

body
	width 900px
	height 1400px

	background black

	color white
	font-family "Open Sans", sans-serif

// Util ////////////////////////////////////////////////////////////////////////

.util-sub
	font-size .8em

// Date / Time /////////////////////////////////////////////////////////////////

#date
	width 100%
	height 70px

	font-size 50px
	font-weight 300
	line-height @height
	text-align right

#time
	width 100%
	height 130px

	font-size 110px
	font-weight 400
	line-height @height
	text-align right

// Weather /////////////////////////////////////////////////////////////////////

#weather
	width 100%
	height 70px

	font-size 50px
	font-weight 300

	.block
		display inline-block

		width ( 100% / 3 )
		height @height

		line-height @height
		text-align center
